rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users collection
    match /users/{userId} {
      // Users can read/write their own document
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Crop history subcollection
      match /crop_history/{analysisId} {
        // Users can read all their own crop history
        allow read: if request.auth != null && request.auth.uid == userId;
        
        // Users can create new crop analyses
        allow create: if request.auth != null 
                      && request.auth.uid == userId
                      && request.resource.data.keys().hasAll([
                        'imageUrl', 'title', 'cropType', 'healthStatus', 
                        'analysisType', 'confidence', 'date'
                      ])
                      && request.resource.data.confidence is number
                      && request.resource.data.confidence >= 0 
                      && request.resource.data.confidence <= 100
                      && request.resource.data.analysisType in ['disease', 'pest', 'growth_stage', 'healthy'];
        
        // Users can update their own analyses (except protected fields)
        allow update: if request.auth != null 
                      && request.auth.uid == userId
                      && !request.resource.data.diff(resource.data)
                         .affectedKeys().hasAny(['createdAt', 'imageUrl', 'imagePath']);
        
        // Users can delete their own analyses
        allow delete: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
